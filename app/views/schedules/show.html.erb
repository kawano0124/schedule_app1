<div class="centered-content">
<h3>スケジュール詳細</h3>

<table class="centered-table">
    <tr>
      <th>タイトル</th>
      <td><%= @schedule.title %></td>
    </tr>

    <tr>
      <th>開始日</th>
      <td><%= @schedule.start_date ? @schedule.start_date.strftime('%Y年 %m月%d日') : '' %></td>
    </tr>
    
    <tr>
      <th>終了日</th>
      <td><%= @schedule.end_date ? @schedule.start_date.strftime('%Y年 %m月%d日') : '' %></td>
    </tr>

    <tr>
      <th>終日</th>
      <td><%= @schedule.all_day ? '○' : '' %></td>

    </tr>

    <tr>
      <th>スケジュールメモ</th>
      <td><%= @schedule.schedule_memo %></td>
    </tr>
</table>

<div>
  <ul>
    <li><%= link_to "編集", edit_schedule_path(@schedule) %></li>
    <li><%= link_to "予定一覧に戻る", :schedules %></li>

  </ul>
</div>
