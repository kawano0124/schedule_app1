<div class="centered-content">
<h3>予定一覧</h3>

<p><%= link_to "新規追加", :new_schedule %></p>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>


<table class="centered-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule.start_date ? schedule.start_date.strftime('%Y年 %m月%d日') : '' %></td>
        <td><%= schedule.end_date ? schedule.end_date.strftime('%Y年 %m月%d日') : '' %></td>
        <td><%= schedule.all_day? ? '◯' : '' %></td>
        <td><%= schedule.updated_at ? schedule.updated_at.strftime('%Y年 %m月%d日 %H時%M分') : '' %></td>
        <td>
          <%= link_to "詳細", schedule %>
        </td>
        <td>
          <%= link_to "編集", [:edit, schedule] %>
        </td>
        <td>
          <%= link_to "削除", schedule, method: :delete, data: {confirm: "予定を削除しますか？"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>予定の合計数: <%= @schedules.count %></p>

<p>本日の日付: <%= Time.current.strftime('%Y年 %m月%d日') %></p>
